<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:lovecanon="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="设置中心"
        android:textColor="#fff"
        android:textSize="22sp"/>

    <com.lovec.mobilesafe.ui.SettingView
        android:id="@+id/sv_setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lovecanon:des_off="关闭提示更新"
        lovecanon:des_on="打开提示更新"
        lovecanon:title="提示更新"
        >
    </com.lovec.mobilesafe.ui.SettingView>

    <com.lovec.mobilesafe.ui.SettingView
        android:id="@+id/sv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lovecanon:des_off="显示号码归属地"
        lovecanon:des_on="打开号码归属地提示"
        lovecanon:title="号码归属地提示"
        >
    </com.lovec.mobilesafe.ui.SettingView>

    <com.lovec.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_setting_changebg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.lovec.mobilesafe.ui.SettingClickView>

    <com.lovec.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_setting_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.lovec.mobilesafe.ui.SettingClickView>

    <com.lovec.mobilesafe.ui.SettingView
        android:id="@+id/sv_setting_blacknum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lovecanon:des_off="关闭黑名单拦截"
        lovecanon:des_on="打开黑名单拦截"
        lovecanon:title="黑名单服务"
        />
</LinearLayout>