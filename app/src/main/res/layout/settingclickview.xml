<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/iv_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="是否提示更新"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/iv_setting_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_setting_title"
        android:layout_marginLeft="5dp"
        android:text="关闭提示更新选项"
        android:textColor="#aa000000"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/cb_setting_update"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:src="@drawable/ic_navigate_next_black_18dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/iv_setting_des"
        android:layout_marginTop="5dp"
        android:background="#77000000"/>
</RelativeLayout>